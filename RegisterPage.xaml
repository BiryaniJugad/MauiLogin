<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLogin.RegisterPage"
             Title="Register">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Create Account" FontSize="28" HorizontalOptions="Center"/>

            <Entry x:Name="RegUsernameEntry" Placeholder="Username" />
            <Entry x:Name="RegEmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="RegPasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="RegConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <Picker x:Name="GenderPicker"
                Title="Select Gender"
                HorizontalOptions="FillAndExpand">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Male</x:String>
                        <x:String>Female</x:String>
                        <x:String>Other</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Register" Clicked="OnRegisterClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>